# App environment
APP_ENV=dev

# Local PostgreSQL connection string (no Docker)
# Format:
# postgresql+psycopg://USER:PASSWORD@HOST:PORT/DB_NAME
DATABASE_URL=postgresql+psycopg://postgres:change-this-password@localhost:5432/heatmap_db

# GitHub API settings
# GraphQL endpoint requires GITHUB_TOKEN.
GITHUB_TOKEN=
GITHUB_GRAPHQL_URL=https://api.github.com/graphql

# GitHub OAuth settings
GITHUB_OAUTH_CLIENT_ID=
GITHUB_OAUTH_CLIENT_SECRET=
APP_BASE_URL=http://127.0.0.1:8000

# DB-based sync cooldown (per profile)
SYNC_COOLDOWN_SECONDS=60    

# DB-based hourly sync limit (per profile)
SYNC_MAX_PER_HOUR=12


